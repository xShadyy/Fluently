{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "es2022"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "incremental": true,
    "noEmit": true,

  
    "types": ["vitest/globals", "vitest", "node", "@testing-library/jest-dom"],


    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"]
    },


    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "vitest.setup.mjs",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx"
  ],

  "exclude": ["node_modules"]
}
